<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="440dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainScreen.DogFragment"
    android:id="@+id/fr">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="4dp"
        android:id="@+id/imgDogMain"
        android:src="@drawable/dog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textInf"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name, Age \n city"
        android:layout_marginBottom="4dp"
        android:background="@color/pageTitle"
        style="@style/TextViewStyle"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_thin"
        android:id="@+id/textInf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgDogMain"
        android:gravity="center" />

</androidx.constraintlayout.widget.ConstraintLayout>